<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBaseline_creator="15"
    tools:context=".TrainActivity$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop='true'>

            <TextView
                android:id="@+id/train_exercise_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="32dp"
                android:text="TextView"
                android:textSize="32dp"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/youtube_button"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:background="@null"
                android:padding="32dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@drawable/youtube_button_icon" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/train_exercise_reps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:padding="16dp"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/train_exercise_repType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="32dp"
                    android:text="TextView"
                    android:textSize="24dp" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="80dp"
            android:background="@null"
            android:text="save"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="80dp"
            android:background="@null"
            android:text="skip"
            android:textColor="@android:color/black" />




    </RelativeLayout>

</android.support.constraint.ConstraintLayout>